<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SJMIT_Events.Views.Controls.AddressBar">
    
    <!-- Main Content Layer -->
    <Grid x:Name="TopBar"
          ZIndex="0"
          ColumnDefinitions="Auto, *, Auto"          
          VerticalOptions="Start" 
          Padding="7, 0, 12, 0"
          HeightRequest="56">

        <!-- App Title -->
        <Label  Grid.Column="0"
                Text="SJMIT Events"
                VerticalOptions="Center"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="{AppThemeBinding Light=#424242, Dark=#E0E0E0}"
                Padding="10, 6"/>
        
        <StackLayout Grid.Column="2"
                     Orientation="Horizontal"
                     VerticalOptions="Center"
                     Spacing="12">

            <!-- Hamburger Menu Icon -->
            <Grid x:Name="DashboardIcon"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="3"
                  Padding="8, 13"
                  WidthRequest="40"
                  HeightRequest="40"
                  VerticalOptions="Center"
                  BackgroundColor="Transparent">
                <!-- Top Line -->
                <BoxView Grid.Row="0"
                         BackgroundColor="{AppThemeBinding Light=#424242, Dark=#E0E0E0}"
                         HeightRequest="2"
                         CornerRadius="1"
                         HorizontalOptions="Fill"/>
                <!-- Middle Line -->
                <BoxView Grid.Row="1"
                         BackgroundColor="{AppThemeBinding Light=#424242, Dark=#E0E0E0}"
                         HeightRequest="2"
                         CornerRadius="1"
                         HorizontalOptions="Fill"/>
                <!-- Bottom Line -->
                <BoxView Grid.Row="2"
                         BackgroundColor="{AppThemeBinding Light=#424242, Dark=#E0E0E0}"
                         HeightRequest="2"
                         CornerRadius="1"
                         HorizontalOptions="Fill"/>
                <!-- Tap Gesture -->
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDashboardIconTapped"/>
                </Grid.GestureRecognizers>
            </Grid>
        </StackLayout>
        
    </Grid>
</ContentView>