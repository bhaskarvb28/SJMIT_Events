<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SJMIT_Events.Views.Controls"
             x:Class="SJMIT_Events.MainPage">

    <Grid>
        <Grid RowDefinitions="Auto, Auto, *">

            <controls:AddressBar x:Name="AddressBarControl" Grid.Row="0" />

            <BoxView x:Name="separatorLine"
                        Grid.Row="1"
                        BackgroundColor="{AppThemeBinding Light=#424242, Dark=#E0E0E0}"
                        HeightRequest="0.1"
                        VerticalOptions="Center"
                        ZIndex="5"
                        IsVisible="True"/>

            <controls:Events x:Name="EventsControl" Grid.Row="2" />

        </Grid>

        <controls:Dashboard x:Name="DashboardControl"/>
    </Grid>

</ContentPage>
